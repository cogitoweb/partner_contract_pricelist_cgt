<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- tree view -->
    	<record id="view_pricelist_istat_revaluation_history_form" model="ir.ui.view">
            <field name="name">Pricelist Istat Revaluation History Tree</field>
            <field name="model">istat.revaluation_history</field>
            <field name="arch" type="xml">

                <tree string="Istat Revaluation History" create="0" delete="0" edit="0">
                    <field name="contract_id"/>
                    <field name="pricelist_id"/>
                    <field name="revaluation_year"/>
                    <field name="revaluation_percentage"/>
                    <field name="sell_price_original"/>
                    <field name="sell_price_new"/>
                    <field name="create_date"/>
                </tree>

			</field>
		</record>


        <!-- action -->
		<record id="view_pricelist_istat_revaluation_history_action" model="ir.actions.act_window">
			<field name="name">Istat Revaluation History</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">istat.revaluation_history</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree</field>
			<field name="view_id" ref="view_pricelist_istat_revaluation_history_form"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                History of Istat Revaluations.
              </p>
            </field>
		</record>


        <!-- menu item -->
        <menuitem id="view_pricelist_istat_revaluation_history_menu"
            name="Istat Revaluation History"
            action="view_pricelist_istat_revaluation_history_action"
            parent="sale.menu_sale_invoicing"
            sequence="7"
        />

    </data>
</odoo>
