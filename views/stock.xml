<openerp>
    <data>

        <!-- new stock.picking form with Partner Contracts -->

        <record id="contract_delivery_vpicktree" model="ir.ui.view">
            <field name="name">stock.picking.contract.delivery.tree</field>
            <field name="model">stock.picking</field>
            <field name="priority" eval="24"/>
            <field name="arch" type="xml">
                <tree colors="blue:state == 'draft';grey:state == 'cancel';red:state not in ('cancel', 'done') and min_date &lt; current_date" string="Contracts Delivery">
                    <field name="name"/>
                    <field name="location_dest_id" invisible="1"/>
                    <field name="partner_id"/>
                    <field name="date"/>
                    <field name="min_date" invisible="1"/>
                    <field name="origin"/>
                    <field name="group_id" invisible="1"/>
                    <field name="contract_invoiced"/>
                    <field name="state"/>
                    <field name="priority" invisible="1"/>
                    <field name="picking_type_id" invisible="1"/>
                </tree>
            </field>
        </record>


        <record id="view_picking_contract_form" model="ir.ui.view">
            <field name="name">stock.picking.contract.form</field>
            <field name="model">stock.picking</field>
            <field eval="30" name="priority"/>
            <field name="arch" type="xml">
                <form string="Contracts Delivery">
                <header>
                    <button name="action_transfer" states="draft" string="Transfer" type="object" class="oe_highlight"/>
                    <button name="open_contract_invoice" type="object" string="Open Invoice" class="oe_highlight" attrs="{'invisible': [('contract_invoiced','=',False)]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name" class="oe_inline" attrs="{'invisible': [('name','=','/')]}" readonly="1"/>
                    </h1>
                    <group>
                        <group>
                            <field name="partner_id" required="1"/>
                            <field name="contract_id" options="{'no_create': 1}" domain="[('partner_id','=',partner_id), ('state','=','open')]" required="1"/>
                            <field name="backorder_id" readonly="1" attrs="{'invisible': [('backorder_id','=',False)]}"/>
                            <field name="is_contract_delivery" invisible="1"/>
                            <field name="picking_type_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="min_date"/>
                            <field name="origin" placeholder="e.g. PO0032" class="oe_inline"/>
                            <field name="contract_invoiced" readonly="1" attrs="{'invisible':[('contract_invoiced','=',False)]}"/>
                            <field name="contract_to_invoice" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Products">
                            <field name="contract_delivery_line" widget="one2many_list">
                                <form string="Moves">
                                    <header>
                                            <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                                    </header>
                                    <group>
                                        <group>
                                            <field name="product_id" required="1"/>
                                            <label for="product_uom_qty" required="1"/>
                                            <div>
                                                <field name="product_uom_qty" class="oe_inline" required="1"/>
                                                <field name="product_uom" string="Unit Of Measure" groups="product.group_uom" class="oe_inline" required="1"/>
                                            </div>
                                            <field name="name" required="1"/>
                                        </group>
                                        <group>
                                            <field name="date" required="1"/>
                                            <field name="date_expected" required="1"/>
                                            <field name="invoice_state" required="1"/>
                                            <field name="contract_pricelist_line_id" invisible="1"/>
                                        </group>
                                    </group>
                                </form>
                                <tree string="Moves">
                                    <field name="product_id"/>
                                    <field name="product_uom_qty"/>
                                    <field name="product_uom"/>
                                    <field name="contract_pricelist_line_id" invisible="1"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                            <newline/>
                            <field name="note" colspan="4"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
                </form>
            </field>
        </record>

        <record id="action_picking_contract_tree" model="ir.actions.act_window">
            <field name="name">Contracts Delivery</field>
            <field name="res_model">stock.picking</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,calendar</field>
            <field name="domain">[('is_contract_delivery','=',True)]</field>
            <field name="context">{
                    'contact_display': 'partner_address',
                    'contract_order': True
            }
            </field>
            <field name="search_view_id" ref="stock.view_picking_internal_search"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to create a stock transfer operation. 
              </p><p>
                Most operations are prepared automatically by Odoo according
                to your preconfigured logistics rules, but you can also record
                manual stock movements.
              </p>
            </field>
        </record>

        <record id="action_view_picking_contract_tree" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="contract_delivery_vpicktree"/>
            <field name="act_window_id" ref="action_picking_contract_tree"/>
        </record>

        <record id="action_view_picking_contract_form" model="ir.actions.act_window.view">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_picking_contract_form"/>
            <field name="act_window_id" ref="action_picking_contract_tree"/>
        </record>

        <!-- new Delivery Order Menu -->
        <menuitem id="menu_stock_transfer_cgt"
            name="Contracts Delivery Order"
            parent="base.menu_invoiced"
            sequence="19"
            action="action_picking_contract_tree"
            groups="stock.group_stock_manager,account.group_account_manager"/>

    </data>
</openerp>