<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
    
        <!-- product template form -->
        <record id="product_template_form" model="ir.ui.view">
            <field name="name">Pricelist Product Template Form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view" />
            <field name="priority">20</field>
            <field name="arch" type="xml">

                <xpath expr="//button[@name='action_view_sales']" position="before">
                    <button class="oe_stat_button" name="action_view_contract_lines" type="object"
                        icon="fa-usd" attrs="{'invisible':[('sale_ok', '=', False)]}">
                        <span class="o_stat_text">Contract lines</span>
                    </button>
                </xpath>

            </field>
        </record>

    </data>
</odoo>
