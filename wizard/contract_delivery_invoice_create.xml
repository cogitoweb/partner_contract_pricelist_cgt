<openerp>
	<data>

		<record id="contract_delivery_invoice_create_form" model="ir.ui.view">
			<field name="name">contract.delivery.invoice.create.form</field>
			<field name="model">contract.delivery.invoice.create</field>
			<field name="arch" type="xml">
				<form string="Create Invoice">
					<group colspan="4" string="Create Invoice">
						<label string="Click on Create Invoice button to generate Invoice(s) for selected Delivery Order(s)." colspan="4"/>
					</group>
					<footer>
						<button name="action_create_invoice" type="object" string="Create Invoice" class="oe_highlight"/> or 
						<button name="cancel" special="cancel" string="cancel" class="oe_link"/>
					</footer>
				</form>
			</field>
		</record>

		<act_window name="Create Invoice"
                res_model="contract.delivery.invoice.create"
                src_model="stock.picking"
                view_mode="form"
                multi="True"
                target="new"
                key2="client_action_multi"
                id="action_contract_delivery_invoice"
				context="{'active_ids': active_ids}"
		/>

	</data>
</openerp>
